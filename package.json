{
    "name": "simplr-components",
    "description": "Webcomponent simplr-components following open-wc recommendations",
    "license": "MIT",
    "author": "simplr-components",
    "version": "0.0.0",
    "main": "dist/src/index.js",
    "module": "dist/src/index.js",
    "exports": {
        ".": "./dist/src/index.js"
    },
    "scripts": {
        "analyze": "cem analyze --litelement",
        "start": "npm run storybook",
        "build": "tsc -b && npm run analyze -- --exclude dist",
        "prepublish": "tsc && npm run analyze -- --exclude dist",
        "lint": "eslint --ext .ts,.html . --ignore-path .gitignore --ignore-pattern stories && prettier \"**/*.ts\" --check --ignore-path .gitignore",
        "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore --ignore-pattern stories && prettier \"**/*.ts\" --write --ignore-path .gitignore",
        "test": "tsc && wtr --coverage",
        "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
        "watch": "tsc -b --watch --preserveWatchOutput",
        "build-components": "npm run build --workspaces",
        "storybook": "npm run build && concurrently -k -r \"npm run watch\" \"npm run run-storybook\"",
        "run-storybook": "wds -c .storybook/server.mjs",
        "storybook:build": "tsc && npm run analyze -- --exclude dist && build-storybook",
        "new:component": "node new-component.js",
        "publish:gh-pages": "./build-gh-pages.sh"
    },
    "dependencies": {
        "lit": "^2.0.0-rc.3"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.4.17",
        "@open-wc/eslint-config": "^4.3.0",
        "@open-wc/testing": "next",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "@web/dev-server": "^0.1.22",
        "@web/dev-server-storybook": "next",
        "@web/test-runner": "next",
        "concurrently": "^5.3.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "tslib": "^2.3.1",
        "typescript": "^4.4.2"
    },
    "customElements": "custom-elements.json",
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "@open-wc",
            "prettier"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": [
                "error"
            ],
            "import/no-unresolved": "off",
            "import/extensions": [
                "error",
                "always",
                {
                    "ignorePackages": true
                }
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "arrowParens": "avoid",
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "workspaces": [
        "src/components/*",
        "src/core"
    ]
}
